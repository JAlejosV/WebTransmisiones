                        <div class="col-md-12 row">
                            <div class="col-md-2 ">
                                Descripción de la Tarifa
                            </div>
                            <div class="col-md-4">
                                <input class="InputTEXT_01" maxlength="70" type="text"
                                    ng-model="$root.DatosFormulario.DatosTarifaLigadaAC.DescripcionTarifa"
                                    ng-disabled="true" />
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>

        <div id="seccion-3">
            <div>
                <div class="block_cab block_cab_active">
                    <h2>
