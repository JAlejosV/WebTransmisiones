        <div id="seccion-2">
            <div>
                <div class="block_cab block_cab_active">
                    <h2>
                        <span>Configuración de Tarifa</span>
                    </h2>
                    <h3></h3>
                    <div class="acordeon">
                    </div>
                </div>
                <div class="block_content" style="width: 100%">

                    <form id="frmAC_RegConfiguracionTarifa">
                        <div class="col-md-12 row">
                            <input class="ng-hide" maxlength="10" type="text" ng-model="$root.DatosFormulario.DatosTarifaLigadaAC.IdCount" disabled />
