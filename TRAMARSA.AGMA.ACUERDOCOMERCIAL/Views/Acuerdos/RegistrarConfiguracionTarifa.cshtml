                                            titulosinresultados="" 
                                            ocultarexportar="1" 
                                            altogrilla="150px" 
                                            idmarcarprimerresgistro="0" 
                                            ngclickagregar="" 
                                            urllistar="" 
                                            flgcargargrilla="1">
