                                                   titulosinresultados=""
                                                   ocultarexportar="1"
                                                   altogrilla="80px"
                                                   idmarcarprimerresgistro="0" url=""
                                                   flgcargargrilla="0" />
                                        <table id="grillaListaDetalleRango"></table>
                                        <div id="grillaListaDetalleRangopager"></div>
                                        </ng-jqgrid>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="caja11 msgerror listaDetalleRando">
                            <span class="field-validation-valid msgerror" data-valmsg-replace="true"></span>
                        </div>

                    </form>
                    <div>
                    </div>
                </div>
            </div>
        </div>
        <div id="seccion-4">
            <div>
                <div class="block_cab block_cab_active">
                    <h2>
                        <span>Detalle de Tipo de Contenedor</span>
                    </h2>
                    <h3></h3>
                    <div class="acordeon">
                    </div>
                </div>
                <div class="block_content" style="width:100%">
                    <form id="frmDetalleTipoContenedor">

                        <div class="col-md-6 row">


                            <div class="block_menu block_content">
                                <div style="max-width: 100%; height: 100%">

                                    <div class="col-md-12 row">
                                        <div class="col-md-12 row">
                                            <div class="col-md-4">
                                                Clase de Contenedor
                                            </div>
                                            <div class="col-md-8">
                                                <select class="InputSELECT_01"
                                                        ng-model="$root.DatosFormulario.ConfiguracionPeriodo.CodigoClaseContenedor"
                                                        data-bind="value: $root.DatosFormulario.ConfiguracionPeriodo.CodigoClaseContenedor"
                                                        ng-options="moneda.CodigoClaseContenedor as moneda.Descripcion for moneda in $root.DatosFormulario.ConfiguracionPeriodo.DataCombos.ListaCategoriaContenedor"
                                                        id="$root.DatosFormulario.ConfiguracionPeriodo.CodigoClaseContenedor"
                                                        data-val="true"
                                                        data-val-required="Clase de contenedor es requerido."
                                                        name="$root.DatosFormulario.ConfiguracionPeriodo.CodigoClaseContenedor"
                                                        ng-disabled="FlagEditing==false"
                                                        ng-change="CargarTipoContenedor($root.DatosFormulario.ConfiguracionPeriodo.CodigoClaseContenedor)"
                                                        required>
                                                    <option value="">[Seleccione]</option>
                                                </select>
                                                <div class="caja11 msgerror CodigoClaseContenedor">
                                                    <span class="field-validation-valid msgerror" data-valmsg-for="$root.DatosFormulario.ConfiguracionPeriodo.CodigoClaseContenedor" data-valmsg-replace="true"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>

                            <div id="ContentListado_ListaTipoContenedor" class="block_content">
                                <div class="form_section" style="width:100%">
                                    <div class="forms2">
                                        <div class="table-responsive" style="overflow:hidden;">

                                            <ng-jqgrid config="config"
                                                       addnew="true"
                                                       modeldata="$root.DatosFormulario.ConfiguracionPeriodo.ListaTipoContenedor"
                                                       gridid="grillaListaDetalleTipoContenedor"
                                                       pagerid="grillaListaDetalleTipoContenedor_pager"
                                                       api="gridapiListaDetalleTipoContenedor"
                                                       flgocultarbarrapaginado="1"
                                                       idgrilla="C85BA0D4-1A91-47E8-A265-5B51FFC0A00D"
                                                       titulosinresultados=""
                                                       ocultarexportar="1"
                                                       altogrilla="80px"
                                                       idmarcarprimerresgistro="0" url=""
                                                       flgcargargrilla="0">

                                                <table id="grillaListaDetalleTipoContenedor"></table>
                                                <div id="grillaListaDetalleTipoContenedor_pager"></div>
                                            </ng-jqgrid>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="caja11 msgerror listaSucursal">
                                <span class="field-validation-valid msgerror" data-valmsg-replace="true"></span>
                            </div>
                        </div>

                    </form>


                    <div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>