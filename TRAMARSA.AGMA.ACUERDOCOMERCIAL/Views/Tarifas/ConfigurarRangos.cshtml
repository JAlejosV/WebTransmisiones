@{
    Layout = null;
}

<div class="block" style="min-height: 600px;">
    <div ng-app="app" ng-controller="ConfiguracionRangoController">
       
        <div id="seccion-1">
            @Html.Partial("~/Views/Botonera/AC_TarifaEscalonada_ConfiguracionPeriodo.cshtml")
        </div>
        <div id="seccion-2">
            <div>
                <div class="block_cab block_cab_active">
                    <h2>
                        <span>Datos Generales</span>
                    </h2>
                    <h3></h3>
                    <div class="acordeon">
                    </div>
                </div>
                <div class="block_content" style="width:100%">
                    <form id="frmConfigRangosMoneda">
                        <div class="col-md-12 row">
                            <div class="col-md-4">
                                Moneda
                            </div>
                            <div class="col-md-8">
                                <select class="InputSELECT_01"
                                        ng-model="$root.DatosFormulario.ConfiguracionPeriodo.CodigoMoneda"
                                        data-bind="value: $root.DatosFormulario.ConfiguracionPeriodo.CodigoMoneda"
                                        ng-options="moneda.Codigo as moneda.Nombre for moneda in $root.DatosFormulario.ConfiguracionPeriodo.DataCombos.ListaMoneda"
                                        id="$root.DatosFormulario.ConfiguracionPeriodo.CodigoMoneda"
                                        data-val="true"
                                        data-val-required="Moneda es requerido."
                                        name="$root.DatosFormulario.ConfiguracionPeriodo.CodigoMoneda"
                                        ng-disabled="FlagEditing==false"
                                        required>
                                    <option value="">[Seleccione]</option>
                                </select>
                                <div class="caja11 msgerror CodigoMoneda">
                                    <span class="field-validation-valid msgerror" data-valmsg-for="$root.DatosFormulario.ConfiguracionPeriodo.CodigoMoneda" data-valmsg-replace="true"></span>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div id="seccion-3">
            <div>
                <div class="block_cab block_cab_active">
                    <h2>
                        <span>Detalle de Rangos</span>
                    </h2>
                    <h3></h3>
                    <div class="acordeon">
                    </div>
                </div>
                <div class="block_content" style="width:100%">
                    <form id="frmDetalleRangos">
                        <div class="block_menu block_content">
                            <div style="max-width: 100%; height: 100%">

                                <div class="col-md-12 row">
                                    <div class="col-xs-2">
                                        <button class="SeparatorLeft boton1Style boton1" ng-disabled="FlagEditing==false" ng-click="AgregarDetalleRango();" style="">
                                            <span class="boton1Span">
                                                <img class="boton1Img csBtnAgregar" alt="Agregar" src="/Images/formatmap32x32.png">
                                            </span>
                                            <span class="boton1txt">Agregar</span>
                                        </button>
                                    </div>
                                    <div class="col-xs-10">
                                        <div class="col-xs-12 col-md-12">

                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>

                        <div id="ContentListado8ff8abc7-82ae-4066-a67d-e40d4a1d3464" class="block_content">
                            <div class="form_section" style="width:100%">
                                <div class="forms2">
                                    <div class="table-responsive" style="overflow:hidden;">

                                        <ng-jqgrid config="config"
                                                   addnew="true"
                                                   modeldata="$root.DatosFormulario.ConfiguracionPeriodo.ListaDetalleRango"
