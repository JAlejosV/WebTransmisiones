@{
    Layout = null;
}

<div class="block" style="">

    <div ng-app="app" ng-controller="AdministrarNuevoGrupoPuertoController">
        <div id="seccion-1">
            @Html.Partial("~/Views/Botonera/AC_BotoneraGrabarMaestro.cshtml")
        </div>
        <div id="seccion-2">
            <div>
                <div class="block_cab block_cab_active">
                    <h2>
                        <span>Datos Grupo Puerto Externo</span>
                    </h2>
                    <h3></h3>
                    <div class="acordeon">
                    </div>
                </div>
                <form id="RegistrarNuevoGrupoPuertoFrm" name="RegistrarNuevoGrupoPuertoFrm" style="height: 150px !important;">
                    <div class="block_content" style="width:100%">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-12 row">
                                        <div class="col-md-4">
                                            Línea
                                        </div>
                                        <div class="col-md-8">
                                            <select ng-model="$root.DatosFormulario.RegistroGrupoPuertoExterno.RegistroDatos.CodigoLinea"
                                                    data-val="true"
                                                    ng-disabled="$root.DatosFormulario.RegistroGrupoPuertoExterno.Datos.Habilitado=='False'"
                                                    data-bind="value: $root.DatosFormulario.RegistroGrupoPuertoExterno.RegistroDatos.CodigoLinea"
                                                    ng-options="linea.Codigo as linea.Nombre for linea in $root.DatosFormulario.RegistroGrupoPuertoExterno.Datos.Lineas"
                                                    class="InputSELECT_01">
                                                <option value="">[Seleccione]</option>
                                            </select>
                                            <div class="caja11 msgerror CodigoLinea">
                                                <span class="field-validation-valid msgerror" data-valmsg-for="$root.DatosFormulario.RegistroGrupoPuertoExterno.Filtro.CodigoLinea" data-valmsg-replace="true"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 row">
                                        <div class="col-md-4">
                                            Nombre Grupo Puerto
                                        </div>
                                        <div class="col-md-8">
                                            <input class="InputTEXT_05" max="100" maxlength="100"
                                                   type="text" ng-enter="Enter()"
                                                   ng-model="$root.DatosFormulario.RegistroGrupoPuertoExterno.RegistroDatos.NombreGrupoPuerto" />
                                            <div class="caja11 msgerror NombreGrupoPuerto">
                                                <span class="field-validation-valid msgerror" data-valmsg-for="$root.DatosFormulario.RegistroGrupoPuertoExterno.RegistroDatos.NombreGrupoPuerto" data-valmsg-replace="true"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 row" style="display: none">
                                    <div class="col-md-4">
                                        Estado Registro
                                    </div>
                                    <div class="col-md-8">
                                        <div class="col-md-12">
                                            <div class="col-md-6">
                                                <input type="radio" name="Activo" ng-enter="Enter()"
                                                       value={{$root.DatosFormulario.RegistroGrupoPuertoExterno.RegistroDatos.EstadoRegistroActivo}}
                                                       ng-model="$root.DatosFormulario.RegistroGrupoPuertoExterno.RegistroDatos.EstadoRegistro"
                                                       class="ng-valid ng-dirty"
                                                       ng-disabled="FlagEditing==false"
                                                       checked />
                                                <label>Activo</label>
                                            </div>
                                            <div class="col-md-6">
                                                <input type="radio" name="Inactivo" ng-enter="Enter()"
                                                       value={{$root.DatosFormulario.RegistroGrupoPuertoExterno.RegistroDatos.EstadoRegistroInactivo}}
                                                       ng-model="$root.DatosFormulario.RegistroGrupoPuertoExterno.RegistroDatos.EstadoRegistro"
                                                       ng-disabled="FlagEditing==false"
                                                       class="ng-valid ng-dirty" />
                                                <label>Inactivo</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
