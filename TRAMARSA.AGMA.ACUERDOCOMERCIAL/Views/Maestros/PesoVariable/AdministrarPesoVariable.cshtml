@{
    Layout = null;
}

<div class="block" style="">

    <div ng-app="app" ng-controller="BusquedaPesoVariableController">
        <div id="seccion-1">
            @Html.Partial("~/Views/Botonera/AC_Reporte_BotoneraReporte.cshtml")
        </div>
        <div id="seccion-2">
            <div>
                <div class="block_cab block_cab_active">
                    <h2>
                        <span>Administrar Peso Variable</span>
                    </h2>
                    <h3></h3>
                    <div class="acordeon">
                    </div>
                </div>
                <form id="AdministrarTipoContenedorFrm" name="AdministrarTipoContenedorFrm">
                    <div class="block_content" style="width:100%">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="col-md-12 row">
                                        <div class="col-md-4">
                                            Línea
                                        </div>
                                        <div class="col-md-8">
                                            <select ng-model="$root.DatosFormulario.AdministrarPesoVariable.Filtro.CodigoLinea"
                                                    data-val="true"
                                                    data-bind="value: $root.DatosFormulario.AdministrarPesoVariable.Filtro.CodigoLinea"
                                                    ng-disabled="$root.DatosFormulario.AdministrarPesoVariable.Datos.Habilitado=='False'"
                                                    ng-options="linea.Codigo as linea.Nombre for linea in $root.DatosFormulario.AdministrarPesoVariable.Datos.Lineas"
                                                    class="InputSELECT_01">
                                                <option value="">[Seleccione]</option>
                                            </select>
                                            <div class="caja11 msgerror CodigoLinea">
                                                <span class="field-validation-valid msgerror" data-valmsg-for="$root.DatosFormulario.AdministrarPesoVariable.Filtro.CodigoLinea" data-valmsg-replace="true"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 row">
                                        <div class="col-md-4">
                                            Código
                                        </div>
                                        <div class="col-md-8">
                                            <input class="InputTEXT_05 solonumeros"
                                                   type="text"
                                                   ng-model="$root.DatosFormulario.AdministrarPesoVariable.Filtro.CodigoVariable" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="col-md-12 row">
                                        <div class="col-md-4">
                                            Descripción
                                        </div>
                                        <div class="col-md-8">
                                            <input class="InputTEXT_05"
                                                   type="text"
                                                   ng-model="$root.DatosFormulario.AdministrarPesoVariable.Filtro.Descripcion" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div id="seccion-3">
            <div style="width:100%;float:left">

                <div class="block_cab block_cab_active">
                    <h2>
                        <span>RESULTADO DE BUSQUEDA</span>
                    </h2>
                    <h3></h3>
                    <div class="acordeon">
                    </div>
                </div>
                <div id="ContentListado3e51f306-5f4e-4e87-8b00-4890829a63c7" class="block_content">
                    <div class="form_section" style="width:100%">

                        <div class="forms2">
                            <div class="table-responsive" style="overflow:hidden">

                                <ng-jqgrid config="config"
                                           addnew="true"
                                           modeldata="$root.DatosFormulario.AdministrarPesoVariable.ListaMaestroPesoVariable"
                                           gridid="grillaListaMaestroPesoVariable"
                                           pagerid="grillaListaMaestroPesoVariable_pager"
                                           api="gridapigrillaListaMaestroPesoVariable"
                                           flgocultarbarrapaginado="0"
                                           idgrilla="3e51f306-5f4e-4e87-8b00-4890829a63c7"
                                           titulosinresultados=""
                                           ocultarexportar="0"
                                           altogrilla="150px"
                                           idmarcarprimerresgistro="0"
                                           ngclickagregar=""
                                           urllistar="/PesoVariable/ConsultarPesoVariable"
                                           flgcargargrilla="0">
                                    <table id="grillaListaMaestroPesoVariable"></table>
                                    <div id="grillaListaMaestroPesoVariable_pager"></div>
                                </ng-jqgrid>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
 
        </div>
    </div>

     
</div>
