@{
    Layout = null;
}

<div class="block" style="">

    <div ng-app="app" ng-controller="RegistroPesoVariableController">
        <div id="seccion-1">
            @Html.Partial("~/Views/Botonera/AC_BotoneraGrabarMaestro.cshtml")
        </div>
        <div id="seccion-2">
            <div>
                <div class="block_cab block_cab_active">
                    <h2>
                        <span>Datos Peso Variable</span>
                    </h2>
                    <h3></h3>
                    <div class="acordeon">
                    </div>
                </div>
                <form id="RegistroPesoVariableFrm" name="RegistroPesoVariableFrm">
                    <div class="block_content" style="width:100%">
                        <div class="row">
                            <div class="col-md-12 row">
                                <div class="col-md-4">
                                    Línea
                                </div>
                                <div class="col-md-8">
                                    <select ng-model="$root.DatosFormulario.RegistroPesoVariable.RegistroDatos.CodigoLinea"
                                            data-val="true"
                                            data-bind="value: $root.DatosFormulario.RegistroPesoVariable.RegistroDatos.CodigoLinea"
                                            ng-disabled="$root.DatosFormulario.RegistroPesoVariable.Datos.Habilitado=='False'  || FlagEditing==false"
                                            ng-options="linea.Codigo as linea.Nombre for linea in $root.DatosFormulario.RegistroPesoVariable.Datos.Lineas"
                                            class="InputSELECT_01">
                                        <option value="">[Seleccione]</option>
                                    </select>
                                    <div class="caja11 msgerror CodigoLinea">
                                        <span class="field-validation-valid msgerror" data-valmsg-for="$root.DatosFormulario.RegistroPesoVariable.RegistroDatos.CodigoLinea" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 row">
                                <div class="col-md-4">
                                    Descripción
                                </div>
                                <div class="col-md-8">
                                    <input class="InputTEXT_05"
                                           type="text" ng-enter="Enter()"
                                           ng-model="$root.DatosFormulario.RegistroPesoVariable.RegistroDatos.Descripcion" />
                                    <div class="caja11 msgerror Descripcion">
                                        <span class="field-validation-valid msgerror" data-valmsg-for="$root.DatosFormulario.RegistroPesoVariable.RegistroDatos.Descripcion" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 row">
                                <div class="col-md-4">
                                    Peso Variable
                                </div>
                                <div class="col-md-8">
                                    <input class="InputTEXT_05 solodecimal"
                                           type="text" ng-enter="Enter()" maxlength="3" max="3"
                                           ng-model="$root.DatosFormulario.RegistroPesoVariable.RegistroDatos.PesoVariable" />
                                    <div class="caja11 msgerror PesoVariable">
                                        <span class="field-validation-valid msgerror" data-valmsg-for="$root.DatosFormulario.RegistroPesoVariable.RegistroDatos.PesoVariable" data-valmsg-replace="true"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 row" style="display: none">
                                <div class="col-md-4">
                                    Estado Registro
                                </div>
                                <div class="col-md-8">
                                    <div class="col-md-12">
                                        <div class="col-md-6">
                                            <input type="radio" name="activo" ng-enter="Enter()"
                                                   value={{$root.DatosFormulario.RegistroPesoVariable.RegistroDatos.EstadoRegistroActivo}}
                                                   ng-model="$root.DatosFormulario.RegistroPesoVariable.RegistroDatos.EstadoRegistro"
                                                   class="ng-valid ng-dirty"
                                                   ng-disabled="FlagEditing==false"
                                                   checked />
                                            <label>Activo</label>
                                        </div>
                                        <div class="col-md-6">
                                            <input type="radio" name="inactivo" ng-enter="Enter()"
                                                   value={{$root.DatosFormulario.RegistroPesoVariable.RegistroDatos.EstadoRegistroInactivo}}
                                                   ng-model="$root.DatosFormulario.RegistroPesoVariable.RegistroDatos.EstadoRegistro"
                                                   ng-disabled="FlagEditing==false"
                                                   class="ng-valid ng-dirty" />
                                            <label>Inactivo</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
