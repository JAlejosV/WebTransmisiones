                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-md-6">
                                    <div class="col-md-12 row">
                                        <div class="col-md-4">
                                            Estado
                                        </div>
                                        <div class="col-md-8">
                                            <select class="InputSELECT_01"
                                                    ng-model="$root.DatosFormulario.AdministrarConfiguracionLinea.Filtro.Estado"
                                                    ng-options="estado.Codigo as estado.Descripcion for estado  in $root.DatosFormulario.AdministrarConfiguracionLinea.Datos.Estados">
