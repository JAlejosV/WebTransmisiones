                    </div>
                </div>
                <form id="ReporteTarifaEscalonadaFrm" name="ReporteTarifaEscalonadaFrm">
                    <div class="block_content" style="width:100%">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="col-md-12 row">
                                        <div class="col-md-4">
                                            Línea Naviera
                                        </div>
                                        <div class="col-md-8">
                                            <select ng-model="$root.DatosFormulario.ReporteTarifaEscalonada.Filtro.CodigoLinea"
                                                    data-val="true"
                                                    data-bind="value: $root.DatosFormulario.ReporteTarifaEscalonada.Filtro.CodigoLinea"
                                                    ng-disabled="$root.DatosFormulario.ReporteTarifaEscalonada.Datos.Habilitado=='False'"
